#include <stdio.h>
int func(int ong, int ba, int nhomdacbiet){
    int lan = 0;
    while (ong > 0 && ba > 0)
    {
        ong -= 2;
        ba -= 1;
        int bienphu = ong + ba;
        if (bienphu > nhomdacbiet)
        {
            lan++;
        }
    }
    return lan;
}
int main()
{
    int ong, ba, nhomdacbiet;
    do
    {
        printf("Nhap m So Ong Tao, n So Ba Tao, k So Nhom Lam Nhiem Vu Dac Biet: \n");
        scanf("%d %d %d", &ong, &ba, &nhomdacbiet);
    } while (ong < 0 || ba < 0 || nhomdacbiet < 0);
    int answer = func(ong, ba, nhomdacbiet);
    printf("So Nhom: %d", answer);
}
